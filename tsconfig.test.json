{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6"],
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strict": true,
    "sourceMap": false,
    "declaration": false,
    "plugins": [{ "transform": "./dist/transformer/index.js", "options": {} }]
  },
  "include": ["test/**/*.test.ts"],
  "exclude": ["test/noop/**/*.ts", "test/cannot-compile/**/*.ts"]
}

{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6"],
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strict": true,
    "sourceMap": false,
    "declaration": false,
    "plugins": [{ "transform": "./dist/src/transformer/index.js", "after": true, "options": {} }],
    "incremental": false
  },
  "references": [
      { "path": "./tsconfig.json" }
  ],
  "include": ["test/**/*.test.ts"],
  "exclude": ["test/noop/**/*.ts", "test/cannot-compile/**/*.ts"]
}

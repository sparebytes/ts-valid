{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6"],
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strict": true,
    "sourceMap": false,
    "declaration": false,
    "plugins": [
      {
        "transform": "./src/transformer.ts",
        "options": {
          "coerceTypes": true
        }
      }
    ]
  },
  "include": ["test/**/*.ts"]
}
